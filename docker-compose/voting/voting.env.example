# Voting Service configuration example

# Database
VOTING_DB_IMAGE=postgres:16-alpine
VOTING_DB_CONTAINER_NAME=voting-service-db
VOTING_DB_USER=your_db_user
VOTING_DB_PASSWORD=your_db_password
VOTING_DB_NAME=your_db_name
VOTING_DB_HOST_PORT=5435
VOTING_DB_DATA_VOLUME=voting-service-db-data

# Service instances
VOTING_SERVICE_IMAGE=dmindrescu/voting-service:v1.2.0
VOTING_SERVICE_PORT=8071
VOTING_SERVICE_ROUTE=/api/voting
VOTING_SERVICE_HEALTH_URL=/api/voting/health
VOTING_SERVICE_NAME_1=voting-service-1
VOTING_SERVICE_NAME_2=voting-service-2
VOTING_SERVICE_NAME_3=voting-service-3
VOTING_SERVICE_INSTANCE_ID_1=voting-service-1
VOTING_SERVICE_INSTANCE_ID_2=voting-service-2
VOTING_SERVICE_INSTANCE_ID_3=voting-service-3
VOTING_SERVICE_HOST_PORT_1=8071
VOTING_SERVICE_HOST_PORT_2=8072
VOTING_SERVICE_HOST_PORT_3=8073
VOTING_SERVICE_DB_DSN=postgresql://your_db_user:your_db_password@voting-db:5432/your_db_name

# Connectivity
VOTING_GATEWAY_URL=http://gateway:3000
